<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Decouvrir.Decouvrir_site">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_light"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/decouvrir_site"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/carte"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Cartographie"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="--------"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="site des jeux"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/decouvrir_ville"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/carte"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Cartographie"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="--------"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="ville Hote"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/decouvrir_offre"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/gallerie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Gallerie"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/decouvrir_gallerie"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/transporticon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">



                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                >

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Transport"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="--------"
                                    android:textSize="25sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@android:color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Dshang"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/decouvrir_transport"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/relative"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tourisme">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/offre_touristique"
                                    android:textColor="@android:color/white"
                                    android:textSize="25sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/souligne"
                                    android:textColor="@android:color/white"
                                    android:textSize="25sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/dshang"
                                    android:textColor="@android:color/white"
                                    android:textSize="25sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

</RelativeLayout>