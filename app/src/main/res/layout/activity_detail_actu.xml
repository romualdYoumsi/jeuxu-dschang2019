<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorWhite"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/framePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="300sp">

                <ImageView
                    android:id="@+id/actuImage"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/numeroicon">

                </ImageView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/rectangle_light"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_gravity="center_vertical|end"
                            android:id="@+id/txt_titre"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.7"
                            android:gravity="center"
                            android:text="cskdmclsdkmclsdckmdskmclsmdclskmdclsmdlcmlsdmclsmdclkmsdlkcm"
                            android:textColor="@android:color/white" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="320dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_gravity="center_vertical|end"
                android:id="@+id/description_article"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>