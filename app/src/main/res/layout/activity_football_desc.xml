<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="1.25"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_date_renc"
                android:layout_weight="1.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="12-1-2019 : 14h45"
                android:gravity="center"

                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/img_favoris"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/favorie_asset"

                />


        </LinearLayout>
        <LinearLayout
            android:weightSum="2.5"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100sp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"

                >
                <ImageView
                    android:id="@+id/img_equipe_one"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_round_equipe1"

                    />
                <TextView
                    android:id="@+id/txt_equipe_one"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="equipe 1"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:background="@drawable/text_round_white"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_score_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="contre"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"

                >
                <ImageView
                    android:id="@+id/img_equipe_two"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_round_equipe2"
                    />
                <TextView
                    android:id="@+id/txt_equipe_two"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="equipe 2"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_stade_renc"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stade B"
                android:gravity="center"
                android:textSize="12sp"/>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>